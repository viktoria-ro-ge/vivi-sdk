<?xml version="1.0" encoding="utf-8"?>
<com.viroge.utils.drag_n_drop.view.DragNDropNoteView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dnd_add_new_container"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:background="@drawable/ic_add_new_background_rounded"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/dnd_add_new_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_action_drag_handle" />

</com.viroge.utils.drag_n_drop.view.DragNDropNoteView>
