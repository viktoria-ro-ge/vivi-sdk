<?xml version="1.0" encoding="utf-8"?>
<com.viroge.notes.presentation.content.drag_n_drop.view.DragNDropNoteView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dnd_note_container"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:background="@drawable/ic_note_background_rounded"
    android:clipToPadding="false"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dnd_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dnd_reorder_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/ic_action_drag_handle"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/dnd_free_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@android:color/black"
        android:textSize="11sp" />

</com.viroge.notes.presentation.content.drag_n_drop.view.DragNDropNoteView>
